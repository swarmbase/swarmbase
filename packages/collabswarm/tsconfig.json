{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "declaration": true,
    "typeRoots": ["types", "node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "composite": true
  },
  "exclude": ["node_modules", "examples", "extras"],
  "include": ["src", "types", "bin"]
}
