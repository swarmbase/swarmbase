{
  "name": "@collabswarm/collabswarm-index",
  "description": "Distributed indexing and query engine for SwarmDB",
  "version": "0.1.0",
  "scripts": {
    "tsc": "tsc -b",
    "prepublishOnly": "yarn tsc",
    "test": "jest",
    "tsc-watch": "tsc -w -p tsconfig.json",
    "benchmark": "node --loader ts-node/esm src/__benchmarks__/run.ts"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "allegrormc@gmail.com",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@peculiar/webcrypto": "^1.4.6",
    "@types/node": "^22.7.5",
    "fake-indexeddb": "^6.0.0",
    "jest": "^29.2.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@collabswarm/collabswarm": "workspace:packages/collabswarm",
    "idb": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__benchmarks__"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^@chainsafe/libp2p-yamux$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@chainsafe/libp2p-gossipsub$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/bootstrap$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/pubsub-peer-discovery$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/circuit-relay-v2$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/webrtc$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/webtransport$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/websockets$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/websockets/filters$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/identify$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/autonat$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/kad-dht$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/interface$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/pubsub$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@libp2p/peer-id$": "<rootDir>/src/__mocks__/empty-module.js",
      "^ipns/selector$": "<rootDir>/src/__mocks__/empty-module.js",
      "^ipns/validator$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@helia/block-brokers$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@helia/interface$": "<rootDir>/src/__mocks__/empty-module.js",
      "^@helia/unixfs$": "<rootDir>/src/__mocks__/empty-module.js",
      "^helia$": "<rootDir>/src/__mocks__/empty-module.js",
      "^datastore-idb$": "<rootDir>/src/__mocks__/empty-module.js",
      "^blockstore-idb$": "<rootDir>/src/__mocks__/empty-module.js",
      "^libp2p$": "<rootDir>/src/__mocks__/empty-module.js",
      "^it-pipe$": "<rootDir>/src/__mocks__/empty-module.js",
      "^bl$": "<rootDir>/src/__mocks__/empty-module.js",
      "^multiformats$": "<rootDir>/src/__mocks__/empty-module.js"
    }
  }
}
